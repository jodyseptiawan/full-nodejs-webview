<div class="container mx-auto mt-10">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold">{{title}}</h1>
    <a href="/create" class="btn-create-todo">Add Todo</a>
  </div>

  <div>
    <table id="todos">
      <thead>
        <tr>
          <th>No</th>
          <th>Title</th>
          <th>Note</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each todos}}
          <tr>
            <td style="width: 1%;">{{increment @index}}</td>
            <td style="width: 30%;">{{this.title}}</td>
            <td style="width: 30%;">{{this.note}}</td>
            <td style="width: 30%;">{{this.status}}</td>
            <td class="flex gap-x-4 justify-stretch" style="width: 100%;">
              <button
                onclick="handleUpdate({{this.id}})"
                class="btn-update-todo bg-yellow-500"
              >
                <span class="material-symbols-outlined">
                  edit
                </span>
              </button>
              <button
                onclick="handleDelete({{this.id}}, `{{this.title}}`)"
                class="btn-delete-todo bg-red-500"
              >
                <span class="material-symbols-outlined">
                  delete
                </span>
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script>
  function handleDelete(id, title) { const result = window.confirm("Delete " +
  title + " ?"); if(result == true) { window.location.href = `/delete/${id}`; }
  } function handleUpdate(id) { window.location.href = `/update/${id}` }
</script>